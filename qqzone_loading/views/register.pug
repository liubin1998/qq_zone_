doctype html
head
    meta(charset='utf-8')
    title 注册;
    script(type='text/javascript', src='/javascripts/register.js')
    link(rel='stylesheet', type='text/css', href='/stylesheets/register.css')
form(action='/login', method='get', onsubmit='return toValid()')
    input#user(type='text', placeholder='请输入用户名', required='')
    span#user_err
    br
    input#pass(type='password', placeholder='请输入密码', required='')
    span#pass_err
    br
    input#pass_ver(type='password', placeholder='请再次输入密码', required='')
    span#pass_ver_err
    br
    input(type='submit')
